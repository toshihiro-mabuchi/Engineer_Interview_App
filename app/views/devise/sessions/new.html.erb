<div class="container main top-main">

  <div class="align-top"><%= render 'shared/flash_messages' %></div>

  <div class="row justify-content-center">
    <div class="top-message" style="text-align: center;">
      <h1>ウェブエンジニア面談練習アプリ</h1>
    </div>

    <div class="box">
      <div class="box-inner">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h3>管理者ログイン</h3>
          <div class="box-email">
            <%= f.label :email, "Eメール" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="box-password">
            <div class="a-row">
              <div class="column-left">
                <%= f.label :password, "パスワード" %>
              </div>
            </div>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <div class="box-login">
            <%= f.submit "ログイン" %>
            <% if devise_mapping.rememberable? %>
              <div class="remember">
                <%= f.check_box :remember_me %>
                <%= f.label :remember, "ログインしたままにする" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>